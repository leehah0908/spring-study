<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.springstudy.springmvc.chap05.mapper.ReplyMapper">

    <sql id="search">
        <if test="type == 'title'">
            where title like concat('%', #{keyword}, '%')
        </if>
        <if test="type == 'content'">
            where content like concat('%', #{keyword}, '%')
        </if>
        <if test="type == 'writer'">
            where writer like concat('%', #{keyword}, '%')
        </if>
        <if test="type == 'tc'">
            where (title like concat('%', #{keyword}, '%')) or (content like concat('%', #{keyword}, '%'))
        </if>

    </sql>

    <!-- 댓글 등록 -->
    <insert id="save">
        insert into tbl_reply
        (reply_text, reply_writer, board_no)
        values(#{replyText}, #{replyWriter}, #{boardNo})
    </insert>

    <!-- 댓글 삭제 -->
    <delete id="delete">
        delete
        from tbl_reply
        where reply_no = #{replyNo}
    </delete>

    <!-- 댓글 수정 -->
    <update id="modify">
        update tbl_reply
        set reply_text = #{replyText}
        where reply_no = #{replyNo}
    </update>

    <!-- 댓글 전체 목록 조회 -->
    <select id="findAll" resultType="reply">
        select *
        from tbl_reply
        where board_no = #{boardNo}
        order by reply_no desc
    </select>

    <!-- 댓글 개별 조회 -->
    <select id="findOne" resultType="reply">
        select *
        from tbl_reply
        where reply_no = #{replyNo}
    </select>

    <!-- 댓글 총 개수 조회 -->
    <select id="count" resultType="int">
        select count(*)
        from tbl_reply
        where board_no = #{boardNo}
    </select>
</mapper>